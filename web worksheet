class Employee:
    def __init__(self,name,salary):
        self.name=name
        self.salary=float(salary)
    def get_annual_salary(self):
        return self.salary*12
    def get_info_employee(self):
        annual_salary= self.get_annual_salary()
        return f"Name: {self.name}, Annual Salary: ${annual_salary:.2f}"

class Manager(Employee):
    def __init__(self,name,salary,bonus):
        super().__init__(name,salary)
        self.bonus=float(bonus)
    def get_annual_salary(self):
       return (self.salary*12) + self.bonus
class Intern(Employee):
    def __init__(self, name, salary):
        super().__init__(name, salary)
    def get_annual_salary(self):
        return self.salary
manager= Manager("bobby",2500,2000)
intern=Intern("Andy",5000)
print(manager.get_info_employee())
print(intern.get_info_employee())

